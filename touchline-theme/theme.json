{
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "bg", "color": "#f8fafc", "name": "Background" },
        { "slug": "surface", "color": "#ffffff", "name": "Surface" },
        { "slug": "text", "color": "#0f172a", "name": "Text" },
        { "slug": "muted", "color": "#64748b", "name": "Muted" },
        { "slug": "primary", "color": "#1d4ed8", "name": "Primary" },
        { "slug": "accent", "color": "#14b8a6", "name": "Accent" },
        { "slug": "border", "color": "#e2e8f0", "name": "Border" },
        { "slug": "success", "color": "#16a34a", "name": "Success" },
        { "slug": "warning", "color": "#f59e0b", "name": "Warning" },
        { "slug": "error", "color": "#ef4444", "name": "Error" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Inter\", system-ui, sans-serif",
          "name": "Inter",
          "slug": "inter"
        },
        {
          "fontFamily": "\"Poppins\", \"Inter\", system-ui, sans-serif",
          "name": "Poppins",
          "slug": "poppins"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "0.85rem", "name": "XS" },
        { "slug": "sm", "size": "0.95rem", "name": "Small" },
        { "slug": "md", "size": "1rem", "name": "Base" },
        { "slug": "lg", "size": "1.25rem", "name": "Large" },
        { "slug": "xl", "size": "1.5rem", "name": "XL" },
        { "slug": "2xl", "size": "2rem", "name": "2XL" },
        { "slug": "3xl", "size": "2.5rem", "name": "3XL" },
        { "slug": "4xl", "size": "3.25rem", "name": "4XL" }
      ]
    },
    "spacing": {
      "spacingSizes": [
        { "slug": "2xs", "size": "0.25rem", "name": "2XS" },
        { "slug": "xs", "size": "0.5rem", "name": "XS" },
        { "slug": "sm", "size": "1rem", "name": "SM" },
        { "slug": "md", "size": "1.5rem", "name": "MD" },
        { "slug": "lg", "size": "2.5rem", "name": "LG" },
        { "slug": "xl", "size": "3.5rem", "name": "XL" },
        { "slug": "2xl", "size": "5rem", "name": "2XL" }
      ]
    },
    "border": {
      "radius": [
        { "slug": "sm", "size": "6px", "name": "Small" },
        { "slug": "md", "size": "12px", "name": "Medium" },
        { "slug": "lg", "size": "20px", "name": "Large" },
        { "slug": "pill", "size": "999px", "name": "Pill" }
      ]
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "999px"
        },
        "styles": [
          {
            "name": "secondary",
            "label": "Secondary",
            "styles": {
              "color": {
                "background": "var(--wp--preset--color--accent)",
                "text": "var(--wp--preset--color--bg)"
              }
            }
          },
          {
            "name": "text",
            "label": "Text",
            "styles": {
              "color": {
                "background": "transparent",
                "text": "var(--wp--preset--color--primary)"
              },
              "border": {
                "width": "0px"
              }
            }
          }
        ]
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--bg)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    },
    "elements": {
      "h1": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--poppins)", "fontSize": "var(--wp--preset--font-size--4xl)", "lineHeight": "1.1" }
      },
      "h2": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--poppins)", "fontSize": "var(--wp--preset--font-size--3xl)", "lineHeight": "1.2" }
      },
      "h3": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--poppins)", "fontSize": "var(--wp--preset--font-size--2xl)", "lineHeight": "1.25" }
      },
      "h4": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--poppins)", "fontSize": "var(--wp--preset--font-size--xl)", "lineHeight": "1.3" }
      },
      "p": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--inter)", "fontSize": "var(--wp--preset--font-size--md)" }
      },
      "a": {
        "color": { "text": "var(--wp--preset--color--primary)" },
        "typography": { "fontWeight": "600" }
      },
      "button": {
        "typography": { "fontWeight": "600" },
        "border": { "radius": "999px" }
      }
    },
    "blocks": {
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--bg)"
        },
        "border": { "radius": "999px" },
        "spacing": { "padding": { "top": "0.75rem", "bottom": "0.75rem", "left": "1.5rem", "right": "1.5rem" } }
      },
      "core/group": {
        "spacing": { "blockGap": "1.25rem" }
      },
      "core/columns": {
        "spacing": { "blockGap": "1.5rem" }
      },
      "core/query": {
        "spacing": { "blockGap": "1.5rem" }
      },
      "core/table": {
        "border": { "color": "var(--wp--preset--color--border)", "width": "1px" }
      },
      "core/details": {
        "border": { "color": "var(--wp--preset--color--border)", "width": "1px" },
        "spacing": { "padding": { "top": "1rem", "bottom": "1rem", "left": "1rem", "right": "1rem" } }
      },
      "core/quote": {
        "border": { "color": "var(--wp--preset--color--accent)" },
        "spacing": { "padding": { "left": "1rem" } },
        "typography": { "fontStyle": "italic" }
      },
      "core/separator": {
        "color": { "background": "var(--wp--preset--color--border)" }
      }
    }
  }
}
